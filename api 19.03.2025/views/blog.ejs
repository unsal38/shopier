<%- include('../views/header'); %>
  <% if(page_name==="ana sayfa" ){ %>
    <div id="blog-anasayfa" class="container">
      <div class="row">
        <div class="card">
          <div class="card-header">
            <h1 class="card-title">BLOG <%= page_name %>
            </h1>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                <li class="breadcrumb-item active text-capitalize" aria-current="page">Blog <%= page_name %>
                </li>
              </ol>
            </nav>
          </div>
          <div class="card-body">
            <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">

              <% blog_data.forEach(e=> {%>
                <div class="col">
                  <div class="card text-bg-dark">
                    <img src="images/<%= e.image %>" class="card-img" alt="<%= e.title %>">
                    <div class="card-img-overlay">
                      <h5 class="card-title"><%= e.title %></h5>
                      <a class="card-link" href="<%= e.url %>">Okumak için tıklayınız</a>
                    </div>
                  </div>
                </div>
                <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>
    <% if(page_name !=="ana sayfa" ){ %>
      <div id="blog-anasayfa" class="container">
        <div class="row">
          <div class="card">
            <div class="card-header">
              <h1 class="card-title">BLOG <%= page_name %>
              </h1>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                  <li class="breadcrumb-item"><a href="/blog">Blog</a></li>
                  <li class="breadcrumb-item active text-capitalize" aria-current="page"><%= page_name %></li>
                </ol>
              </nav>
            </div>
            <div class="card-body pt-0">
              <%- include(`../views/blog_page/${page_name}`) %>
            </div>
          </div>
        </div>
      </div>
    <% } %>
    <%- include('../views/footer'); %>