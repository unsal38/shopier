<%- include('../views/header'); %>
  </head>

  <body>
    <%- include('../views/message'); %>
    <h1>
      <%= title %>
    </h1>
    <p>Welcome to <%= title %> / Üyelik çeşidi: <%= permissions %>
    </p>


    <p class="d-inline-flex gap-1">
      <a class="btn btn-primary btn-sm mb-4" href="/" role="button">Ana Sayfa</a>
      <button class="btn btn-secondary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#registerForm"
        aria-expanded="false" aria-controls="registerForm">
        Register
      </button>
      <button class="btn btn-secondary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#loginForm"
        aria-expanded="false" aria-controls="loginForm">
        Login
      </button>
    </p>
    <div class="collapse" id="registerForm">
      <div class="card card-body">
        <form id="formRegister">
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp">
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password">
          </div>
          <div class="mb-3">
            <label for="firstName" class="form-label">Adı</label>
            <input type="text" class="form-control" id="firstName" aria-describedby="firstName">
          </div>
          <div class="mb-3">
            <label for="lastName" class="form-label">Soyadı</label>
            <input type="text" class="form-control" id="lastName" aria-describedby="lastName">
          </div>
          <div class="mb-3">
            <label for="phoneNumber" class="form-label">Telefon Numarası</label>
            <input type="text" class="form-control" id="phoneNumber" aria-describedby="phoneNumber">
          </div>
          <div class="d-flex justify-content-end">
            <button id="submitFormRegister" class="btn btn-primary">Gönder</button>
          </div>
        </form>




      </div>
    </div>
    <div class="collapse" id="loginForm">
      <div class="card card-body">
        <form id="formlogin">
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="emailLogin" aria-describedby="email">
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="passwordLogin">
          </div>
          <div class="d-flex justify-content-end">
            <button id="submitFormLogin" class="btn btn-primary">Gönder</button>
          </div>
        </form>
      </div>
    </div>

    <div class="container my-4">


    </div>


    <%- include('../views/footer'); %>