<div class="iyzico row row-cols-1 g-4">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <button data-bs-toggle="collapse" data-bs-target="#collapseİyzico" aria-expanded="false"
                    aria-controls="collapseExample" class="text-capitalize btn btn-light">ürünleri gör</button>
                <button id="linkAdd" type="button" class="text-capitalize btn btn-info">link ekle</button>
                <a type="button" class="ms-1 text-capitalize btn btn-success" href="/panel/qrcode_iyzco">barkod çıktı</a>
                <i class="fa-regular fa-square-caret-up"></i>
                <i class="fa-regular fa-square-caret-down"></i>
            </div>
            <div class="collapse" id="collapseİyzico">
                <div class="card-body">
                    <div class="iyzico row row-cols-1 row-cols-md-2 g-4">
                        <% product_data.forEach(v => { %>
                            <div class="col">
                                <div data-iyzico-product-id="<%= v._id %>" class="card mb-3">
                                    <div class="row g-0">
                                        <div class="col-md-4">
                                            <img src="<%= v.media[0].url %>" class="img-fluid rounded-start" alt="<%= v.title %>">
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card-body">
                                                <h5 class="card-title"><%= v.title %></h5>
                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item">
                                                        <button data-onelinkAdd-id="<%= v._id %>" type="button" class="text-capitalize btn btn-info">link ekle</button>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <button data-onelinkDelete-id="<%= v._id %>" type="button" class="text-capitalize btn btn-danger">link sil</button>
                                                    </li>
                                                    <li class="list-group-item">İyzlink:
                                                        <% if(v.iyzco_data.length >0){ %>
                                                            <a target="_blank" href="<%= v.iyzco_data[0].url %>"><%= v.iyzco_data[0].url %> </a>
                                                        <%}%>
                                                        <% if(v.iyzco_data.length === 0){%>
                                                            <p>eklenmemiştir.</p>
                                                        <%}%>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</div>