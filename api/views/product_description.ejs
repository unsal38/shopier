<%- include('../views/header'); %>
    <!-- MODAL -->
    <div class="modal fade" id="Modal_product" tabindex="-1" aria-labelledby="ModalLabel"
        aria-hidden="true">
        <div  class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">

                    <div id="carousel__product" class="carousel slide">
                        <div class="carousel-inner">
                           <% for (let index = 0; index < (product_data.media).length; index++) { %>
                            <% const value = (product_data.media)[index]; %>
                            
                            <div class="carousel-item">
                                    <img src="<%= value.url %>" class="d-block w-100" alt="<%= product_data.title %>">
                            </div>
                          <%  } %>
                          <% if(product_data.youtube_video_link) {%>
                            <div class="carousel-item">
                                <iframe width="420" height="315" src="<%= product_data.youtube_video_link %>"></iframe>
                            </div>`
                          <% } %>

                        </div>

                        <button class="carousel-control-prev" type="button" data-bs-target="#carousel__product"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carousel__product"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <!-- /MODAL -->
    <div id="product">
        <!-- body -->
        <div id="body">
            <div class="container">
                <div id="content" class="full">
                    <div class="product mb-3">
                        <div class="image">
                            <img <% if(product_data.media[0] !==undefined) {var data=product_data.media[0].url}%>
                            <% if(product_data.media[0]===undefined) {var data="images/logo.jpeg" }%>
                                data-bs-toggle="modal"
                                data-bs-target="#Modal_product"
                                    class="card-img-top"
                                    alt="<%= product_data.title %>"
                                        src="<%= data _%>"
                                            >
                        </div>
                        <div class="details">
                            <h1 class="text-capitalize"><%= product_data.title %></h1>
                            <h4><%= product_data.price_data.discountedPrice %> tl</h4>
                            <ul class="nav nav-tabs urun-ozellikler" id="myTab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="ozellik-tab" data-bs-toggle="tab"
                                        data-bs-target="#ozellik-tab-pane" type="button" role="tab"
                                        aria-controls="ozellik-tab-pane" aria-selected="true">Özellikler</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="not-tab" data-bs-toggle="tab"
                                        data-bs-target="#not-tab-pane" type="button" role="tab"
                                        aria-controls="not-tab-pane" aria-selected="false">Ürün Notları</button>
                                </li>

                            </ul>
                            <div class="tab-content urun-ozellikler" id="myTabContent">
                                <div class="tab-pane fade show active" id="ozellik-tab-pane" role="tabpanel"
                                    aria-labelledby="ozellik-tab" tabindex="0">
                                    <%= product_data.describe %>
                                </div>
                                <div class="tab-pane fade" id="not-tab-pane" role="tabpanel" aria-labelledby="not-tab"
                                    tabindex="0">
                                    Özel istekleriniz için iletişime geçiniz. <blockquote> &#10077 Örn: Ametist taş
                                        eklenmesini istiyorum &#10077</blockquote>
                                </div>
                                <div class="tab-pane fade" id="contact-tab-pane" role="tabpanel"
                                    aria-labelledby="contact-tab" tabindex="0">...</div>
                            </div>
                            <div class="actions">
                                <label>Miktar:</label>
                                <select>
                                    <% const data_stokquantity = Number(product_data.stockQuantity)%>
                                    <% for (let index = 1; index < data_stokquantity + 1; index++) { %>
                                        <option value="<%= index %>"><%= index %></option>
                                   <%  } %>
                                    
                                </select>
                                <div class="float-end">
                                    <a href="https://www.shopier.com/32283966" class="btn-grey">Shopier ile Satınal</a>
                                    <a href="sepetAdd" data-product-id="<%= product_data.id %>" class="sepete-ekle">Sepete Ekle</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- / content -->
            </div>
            <!-- / container -->
        </div>
        <!-- / body -->
    </div>
    <%- include('../views/footer'); %>
        <!-- / footer -->